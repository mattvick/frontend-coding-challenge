{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "ignorePatterns": ["webpack.config.js"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    },
    "settings": {
        "jest": {
            "version": 26
        }
    }
}
